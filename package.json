{
  "name": "easy-date-insert",
  "displayName": "easy-date-insert",
  "description": "Insert date string.ex: today/tommorow/lastofmonth/lastofyear, +1d/+1w/+1m",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easy-date-insert.today",
        "title": "Easy Date Insert: Today"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Easy Date Insert",
      "properties": {
        "easyDateInsert.format": {
          "type": "string",
          "default": "YYYY-MM-DD",
          "enum": [
            "YYYY-MM-DD",
            "YYYY/MM/DD",
            "MM-DD",
            "MM/DD/YYYY",
            "YYYY年MM月DD日",
            "YY年MM月DD日",
            "MM月DD日"
          ],
          "description": "Select the date format"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write src/**/*.ts",
    "check-format": "prettier --check src/**/*.ts",
    "test": "vscode-test",
    "test:code": "vitest --reporter=verbose",
    "test:once": "vitest --run"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "dayjs": "^1.11.11"
  }
}
